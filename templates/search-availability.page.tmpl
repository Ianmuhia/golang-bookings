{{template "base" .}}


{{define "content"}}
    <div class="container ">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">

                <img src="/static/images/marjors-suite.png" class="img-fluid img-thumbnail room-image mx-auto d-block">

            </div>

        </div>
        <div class="row ">

            <div class="col-md-6 offset-md-3">

                <h1 class="text-center mt-4 ">
                    Search for Availability
                </h1>

                <form action="/search-availability" method="post" class="text-center">
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

                    <div class="row">
                        <div class="col mt-5 mb-5">
                            <div id="reservation-dates" class="row">
                                <div class="col">
                                    <label>
                                        <input required class="form-control" placeholder="Arrival" type="text"
                                               name="start">
                                    </label>

                                </div>
                                <div class="col">
                                    <label>
                                        <input required class="form-control" placeholder="Departure" type="text"
                                               name="end">
                                    </label>

                                </div>
                            </div>
                        </div>

                    </div>
                    <hr>

                    <button type="submit" class="btn btn-primary">Search Availability</button>
                </form>
            </div>

        </div>


    </div>

{{end}}

{{define "js"}}

    <script src="https://cdn.jsdelivr.net/npm/litepicker/dist/litepicker.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanillajs-datepicker@1.1.4/dist/js/datepicker-full.min.js"></script>
    <script>
        // const picker = new Litepicker({
        //     element: document.getElementById('reservation-dates')
        // });
        const elem = document.getElementById('reservation-dates');
        const rangepicker = new DateRangePicker(elem, {
            format: "yyyy-mm-dd"
        });
    </script>
{{end}}