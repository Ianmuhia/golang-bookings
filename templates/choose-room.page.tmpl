{{template "base" .}}


{{define "content"}}
    <div class="container ">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">

                <img src="/static/images/marjors-suite.png" class="img-fluid img-thumbnail room-image mx-auto d-block">

            </div>

        </div>
        <div class="row ">

            <div class="col ">

                <h1 class="text-center mt-4 ">
                    Choose a room
                </h1>
                <p>
                    {{ $rooms := index .Data "rooms"}}

                    {{range $rooms}}
                        {{.RoomName}}<br>
                    {{end}}
                </p>
            </div>

        </div>


    </div>



{{end}}